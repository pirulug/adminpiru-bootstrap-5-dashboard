extends ../layouts/dashboard

append config
  -pageName = 'Dashboard'
  -pageUrl = 'dashboard'

block content

  .row.g-4
    .col-sm-6.col-xl-3
      .card.border-left-primary.mb-3
        .card-body
          .row
            .col.mt-0
              h5.card-title Sales
            .col-auto
              .stat.stat-primary
                i.align-middle(data-feather='truck')
          h1.mt-1.mb-3 2.382
          .mb-0
            span.text-danger
              i.mdi.mdi-arrow-bottom-right
              |  -3.65%
            span.text-muted Since last week
    .col-sm-6.col-xl-3 
      .card.mb-3
        .card-body
          .row
            .col.mt-0
              h5.card-title Visitors
            .col-auto
              .stat.stat-success
                i.align-middle(data-feather='users')
          h1.mt-1.mb-3 14.212
          .mb-0
            span.text-success
              i.mdi.mdi-arrow-bottom-right
              |  5.25%
            span.text-muted Since last week
    .col-sm-6.col-xl-3
      .card.mb-3
        .card-body
          .row
            .col.mt-0
              h5.card-title Earnings
            .col-auto
              .stat.stat-info
                i.align-middle(data-feather='dollar-sign')
          h1.mt-1.mb-3 $21.300
          .mb-0
            span.text-success
              i.mdi.mdi-arrow-bottom-right
              |  6.65%
            span.text-muted Since last week
    .col-sm-6.col-xl-3  
      .card.mb-3
        .card-body
          .row
            .col.mt-0
              h5.card-title Orders
            .col-auto
              .stat.stat-danger
                i.align-middle(data-feather='shopping-cart')
          h1.mt-1.mb-3 64
          .mb-0
            span.text-danger
              i.mdi.mdi-arrow-bottom-right
              |  -2.25%
            span.text-muted Since last week

  .row.g-4
    .col-12.col-md-12.col-xxl-6.d-flex.order-3.order-xxl-2
      .card.mb-3.flex-fill.w-100
        .card-header
          h5.card-title.mb-0 Recent Movement
        .card-body.py-3
          canvas#chartjs-dashboard-line
    .col-12.col-md-12.col-xxl-6.d-flex.order-3.order-xxl-2
      .card.mb-3.flex-fill.w-100
        .card-header
          h5.card-title.mb-0 Real-Time
        .card-body.px-4

          canvas#chartjs-dashboard-bar(style='height:350px;')

  .row
    .col-12.d-flex
      .card.flex-fill.overflow-hidden
        .card-header
          h5.card-title.mb-0 Latest Projects
        table.table.table-hover.my-0
