                path(d='M5 12l5 5l10 -10')
            .alert-message
              h4.alert-heading This is a custom alert box!
              .text-secondary Your account has been saved!
              a.alert-link an example link

          .alert.alert-danger(role='alert')
            .alert-icon
              i.fa.fa-circle
            .alert-message
              h4.alert-heading This is a custom alert box!
              .text-secondary Your account has been saved!
              hr
              a.alert-link(href="#") Example Link
