extends ../layouts/dashboard

append config
  -pageName = 'Feather Icons'
  -pageUrl = 'icons-feather'

block content	

  .card
    .card-header
      
      h3.card-title Feather Icons
        
      h6.card-subtitle.text-muted Simply beautiful open source icons&nbsp;
        a(href="https://feathericons.com/", target="_blank", rel="noopener noreferrer")
          | Feather Icons 
    .card-body 
      .row
        -const icons = require('../../data/feather_icons.json')

        each icon in icons
          .col-12.col-md-6.col-lg-3.mb-2
            i(class=`align-middle me-2` data-feather=`${icon.name}`)
            span.align-middle= icon.label
  