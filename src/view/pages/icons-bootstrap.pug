extends ../layouts/dashboard

append config
  -pageName = 'Bootstrap Icons'
  -pageUrl = 'icons-bootstrap'

block styles
  link(rel="stylesheet", href="css/bootstrapicons.css")

block content	
  .card 
    .card-header
    .card-body 
      .row
        -const icons = require('../../data/boostrapicons.json')

        each icon in icons
          .col-12.col-md-6.col-lg-3.mb-2
            i(class=`align-middle me-2 bi bi-${icon.name}`)
            span.align-middle= icon.label